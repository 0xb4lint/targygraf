root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.css]
indent_style = tab

[*.html]
indent_style = tab

[*.js]
indent_style = tab

[*.json]
insert_final_newline = false
